{
  "name": "bahaiwritings",
  "version": "0.33.0",
  "description": "The Baha'i Writings in JSON format, along with an optional app to view them",
  "scripts": {
    "tippy-rollup": "rollup -c",
    "eslint": "eslint --ext js,md,html .",
    "lint": "npm run eslint",
    "delay": "delay 5",
    "open-test-only": "open-cli \"http://localhost:8000/textbrowser?lang=en-US&work=aqdas&aqdas-start1-1=3&aqdas-end1-1=5&anchorfield1=Paragraph&field1=Paragraph&field2=English&field3=German&field4=Arabic&colorName=Black&color=%23&bgcolorName=White&bgcolor=%23&fontSeq=Times+New+Roman%2C+serif&fontstyle=normal&fontvariant=Normal&fontweight=normal&fontstretch=normal&letterspacing=normal&lineheight=normal&header=n&footer=0&caption=0&border=1&interlintitle=1&rand=No&=No&checked1=Yes&checked2=Yes&checked3=Yes&checked4=Yes&headerfooterfixed=No&result=Yes&outputmode=table&serverOutput=json\"",
    "open-test-only-delayed": "run-s delay open-test-only",
    "open-test": "run-p server open-test-only-delayed",
    "server": "textbrowser --allowPlugins --namespace=bahaiwritings",
    "server-activate": "textbrowser --allowPlugins --nodeActivate  --namespace=bahaiwritings",
    "node": "npm run eslint && mocha --require chai/register-assert test/bahaiwritingsTests.js",
    "testcafe": "testcafe --skip-js-errors chrome test/ui-tests/**/*.js",
    "test": "npm run eslint && run-p server testcafe",
    "start": "static -p 8082",
    "open-only": "open-cli http://127.0.0.1:8082/test/",
    "open-only-delayed": "run-s delay open-only",
    "open": "run-p start open-only-delayed",
    "browser-test": "run-s eslint open",
    "dev-server": "node ../textbrowser/server/main-cjs.js --allowPlugins --namespace=bahaiwritings",
    "copy-tb": "cp -a ../textbrowser/dist/. node_modules/textbrowser/dist/ && cp -a ../textbrowser/locales/. node_modules/textbrowser/locales/ && cp -a ../textbrowser/server/. node_modules/textbrowser/server/ && chmod -R 755 node_modules/textbrowser/server/"
  },
  "browserslist": [
    "cover 100%"
  ],
  "dependencies": {
    "@brettz9/node-static": "^0.1.1",
    "bahai-indexes": "^0.4.0",
    "json-refs": "^3.0.15",
    "load-stylesheets": "^0.10.0",
    "open-cli": "^6.0.1",
    "simple-get-json": "^8.1.1",
    "textbrowser": "^0.39.0",
    "tippy.js": "^6.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/eslint-parser": "^7.14.4",
    "@brettz9/eslint-plugin": "^1.0.3",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@testcafe-community/axe": "^3.5.0",
    "ajv": "8.6.0",
    "axe-core": "^4.2.2",
    "chai": "^4.3.4",
    "delay-cli": "^1.1.0",
    "eslint": "^7.28.0",
    "eslint-config-ash-nazg": "^29.17.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-array-func": "^3.1.7",
    "eslint-plugin-compat": "^3.9.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsdoc": "^35.1.3",
    "eslint-plugin-markdown": "^2.2.0",
    "eslint-plugin-no-unsanitized": "^3.1.5",
    "eslint-plugin-no-use-extend-native": "^0.5.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-radar": "^0.2.1",
    "eslint-plugin-standard": "^4.1.0",
    "eslint-plugin-testcafe": "^0.2.1",
    "eslint-plugin-unicorn": "^33.0.1",
    "fast-json-patch": "2.2.1",
    "json-metaschema": "1.3.0",
    "mocha": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "remark-lint": "8.0.0",
    "rollup": "^2.51.0",
    "testcafe": "^1.14.2"
  },
  "engines": {
    "node": ">=10.11.0"
  },
  "repository": {
    "type": "git",
    "url": "git@bitbucket.org:brettz9/bahaiwritings.git"
  },
  "author": "Brett Zamir",
  "contributors": [],
  "keywords": [
    "bahai",
    "textbrowser"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://bitbucket.org/brettz9/bahaiwritings/issues?status=new&status=open"
  },
  "homepage": "https://bitbucket.org/brettz9/bahaiwritings"
}
