{
  "name": "bahaiwritings",
  "version": "0.22.1",
  "description": "The Baha'i Writings in JSON format, along with an optional app to view them",
  "scripts": {
    "eslint": "eslint .",
    "open-test": "opn \"http://localhost:8000/textbrowser?lang=en-US&work=aqdas&aqdas-start1-1=3&aqdas-end1-1=5&anchorfield1=Paragraph&field1=Paragraph&field2=English&field3=German&field4=Arabic&colorName=Black&color=%23&bgcolorName=White&bgcolor=%23&fontSeq=Times+New+Roman%2C+serif&fontstyle=normal&fontvariant=Normal&fontweight=normal&fontstretch=normal&letterspacing=normal&lineheight=normal&header=n&footer=0&caption=0&border=1&interlintitle=1&rand=No&=No&checked1=Yes&checked2=Yes&checked3=Yes&checked4=Yes&headerfooterfixed=No&result=Yes&outputmode=table&serverOutput=json\" && npm run server",
    "server": "textbrowser --allowPlugins",
    "server-activate": "textbrowser --allowPlugins --nodeActivate",
    "dev-server": "node ../textbrowser/server/main-cjs.js --allowPlugins",
    "node": "npm run eslint && nodeunit test/bahaiwritingsTests.js",
    "test": "npm run eslint && npm start",
    "start": "opn http://127.0.0.1:8082/test/ && npm run start-no-open",
    "start-no-open": "static -p 8082",
    "copy": "cp -a ../textbrowser/dist/. node_modules/textbrowser/dist/ && cp -a ../textbrowser/locales/. node_modules/textbrowser/locales/ && cp -a ../textbrowser/server/. node_modules/textbrowser/server/ && chmod -R 755 node_modules/textbrowser/server/"
  },
  "dependencies": {
    "load-stylesheets": "^0.7.0",
    "node-static": "0.7.11",
    "opn-cli": "^4.0.0",
    "textbrowser": "0.28.0",
    "tippy.js": "^3.3.0"
  },
  "devDependencies": {
    "ajv": "6.6.2",
    "eslint": "5.10.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-compat": "2.6.3",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-node": "8.0.0",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-standard": "4.0.0",
    "fast-json-patch": "2.0.7",
    "json-metaschema": "1.2.0",
    "nodeunit": "0.11.3",
    "remark-lint": "6.0.4"
  },
  "engines": {},
  "repository": {
    "type": "git",
    "url": "git@bitbucket.org:brettz9/bahaiwritings.git"
  },
  "author": "Brett Zamir",
  "contributors": [],
  "keywords": [
    "bahai",
    "textbrowser"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://bitbucket.org/brettz9/bahaiwritings/issues?status=new&status=open"
  },
  "homepage": "https://bitbucket.org/brettz9/bahaiwritings"
}
